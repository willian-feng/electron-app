{
  "name": "app",
  "version": "1.0.0",
  "description": "Electron App",
  "main": "public/",
  "scripts": {
    "pack": "electron-builder --dir",
    "build:win": "electron-builder -w",
    "build:linux": "electron-builder -l deb tar.xz",
    "start": "electron ./public/",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "willian-feng",
  "license": "ISC",
  "devDependencies": {
    "cross-env": "^5.2.0",
    "electron": "^6.0.1",
    "electron-builder": "^21.2.0",
    "electron-updater": "^4.1.2"
  },
  "build": {
    "appId": "com.wilian.app.electronbuild",
    "productName": "ElectronApp",
    "copyright": "copyright @ f",
    "directories": {
      "output": "build"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./public/favicon.png",
      "uninstallerIcon": "./public/favicon.png",
      "installerHeaderIcon": "./public/favicon.png",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "app"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json",
      "public/**/*"
    ],
    "publish": [
      {
        "provider": "generic",
        "url": "http://www.baidu.com/updates/latest/"
      }
    ],
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "public/favicon.png",
      "target": [
        "zip",
        "dmg"
      ]
    },
    "win": {
      "icon": "public/favicon.png",
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "icon": "public/"
    }
  },
  "dependencies": {
    "antd": "^3.21.4",
    "cmn-utils": "^1.0.9",
    "dva": "^2.4.1"
  }
}
