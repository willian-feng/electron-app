{
  "name": "app",
  "version": "1.0.0",
  "description": "Electron App",
  "main": ".",
  "scripts": {
    "pack": "electron-builder --dir",
    "build:win": "electron-builder -w",
    "build:linux": "electron-builder -l deb tar.xz",
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "willian-feng",
  "license": "ISC",
  "devDependencies": {
    "cross-env": "^5.2.0",
    "electron": "^6.0.1",
    "electron-builder": "^21.2.0",
    "electron-updater": "^4.1.2"
  },
  "build": {
    "appId": "com.wilian.app.electronbuild",
    "productName": "Electron App",
    "copyright": "@Copy right",
    "directories": {
      "output": "build"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./build/icons/aaa.ico",
      "uninstallerIcon": "./build/icons/bbb.ico",
      "installerHeaderIcon": "./build/icons/aaa.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "app",
      "include": "build/script/installer.nsh",
      "artifactName": "${productName}-setup-${version}.${ext}"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "publish": [
      {
        "provider": "generic",
        "url": "http://www.baidu.com/updates/latest/"
      }
    ],
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "static/icons/favicon.ico",
      "target": [
        "zip",
        "dmg"
      ]
    },
    "win": {
      "icon": "static/icons/favicon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "icon": "static/icons"
    }
  }
}
