{
  "name": "app",
  "version": "1.0.0",
  "description": "Electron App",
  "main": "./public/electron.js",
  "scripts": {
    "start:app": "cross-env NODE_ENV=development electron .",
    "start:web": "cross-env BROWSER=none PORT=3210 react-app-rewired start",
    "start": "concurrently -k -n \">>>\" -c \"yellow,magenta\" \"npm run start:web\" \"wait-on http://localhost:3210/ && npm run start:app\"",
    "build:web": "react-app-rewired build",
    "build:app": "cross-env NODE_ENV=production electron-builder",
    "build": "npm run build:web && npm run build:app",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "willian-feng",
  "license": "ISC",
  "dependencies": {
    "acorn": "^7.0.0",
    "acorn-jsx": "^5.0.1",
    "acorn-walk": "^6.1.1",
    "antd": "^3.21.4",
    "classnames": "^2.2.5",
    "cmn-utils": "^1.0.9",
    "dva": "^2.4.1",
    "dva-loading": "^3.0.12",
    "ejs": "^2.6.1",
    "electron-is": "^3.0.0",
    "escodegen": "^1.11.0",
    "fetch-mock": "^6.4.3",
    "fix-path": "^2.1.0",
    "fs-extra": "^7.0.1",
    "object.omit": "^3.0.0",
    "react": "^16.9.0",
    "react-dom": "^16.9.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-decorators": "^7.3.0",
    "babel-plugin-import": "^1.12.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.5",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.26.0",
    "concurrently": "^4.1.2",
    "cross-env": "^5.2.0",
    "customize-cra": "^0.2.12",
    "electron": "^6.0.1",
    "electron-builder": "^21.2.0",
    "electron-updater": "^4.1.2",
    "less": "^2.7.3",
    "less-loader": "^4.0.5",
    "prop-types": "^15.7.2",
    "react-app-rewired": "^2.1.3",
    "react-scripts": "^3.1.1",
    "typescript": "^3.5.3",
    "wait-on": "^3.3.0",
    "webpack-bundle-analyzer": "^3.4.1",
    "yarn": "^1.17.3"
  },
  "build": {
    "appId": "com.wilian.app.electronbuild",
    "productName": "ElectronApp",
    "copyright": "copyright @ f",
    "directories": {
      "output": "dist"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./public/favicon.png",
      "uninstallerIcon": "./public/favicon.png",
      "installerHeaderIcon": "./public/favicon.png",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "app"
    },
    "files": [
      "src/**/*",
      "public/**/*"
    ],
    "publish": [
      {
        "provider": "generic",
        "url": "http://www.baidu.com/updates/latest/"
      }
    ],
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "public/favicon.png",
      "target": [
        "zip",
        "dmg"
      ]
    },
    "win": {
      "icon": "public/favicon.png",
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "icon": "public/"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
